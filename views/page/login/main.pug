extends ../../components/skeleton

include ../../components/auth

block head
    // TODO

    link(href='css/auth.css' rel='stylesheet')

block body
    .container.cs-login-form
        +auth-form-header('Вход в CryptoStarter')
        .row
            .col-md-4.col-md-offset-2.cs-login-block
                h2 Войти
                +input('email',  'email',    'Адрес вашей электронной почты')
                +input('pass',   'password', 'Ваш пароль')
                +button('login', 'Войти').btn-lg.btn-block.btn-primary
                p.pull-right
                    +button-link('forget', '/restorePass', 'Забыли пароль?').btn-link
            .clearfix.visible-xs
            hr.visible-xs
            .col-md-4.cs-register-block
                h2 Нет аккаунта?
                p Ещё не зарегистрировались? Вы можете сделать это сейчас.
                +button-link('register', '/register', 'Регистрация').btn-lg.btn-block.btn-primary

