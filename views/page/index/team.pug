mixin team-block
    #team.row
        .col-md-12
            .text-center
                +icon('user').cs-block-title-icon
            .cs-title-line
            h2.cs-title!= erb('l.title.team')
    .row
        .col-md-4
            img.img-thumbnail(src='img/team/oleg.jpg')
            h2.text-center Oleg Pavlov
            h3.text-center Основатель, разработчик<br> web-части проекта.
            .cs-social-bright.text-center
                a.cs-social.cs-linked-in(href='#')