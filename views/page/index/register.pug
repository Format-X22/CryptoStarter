mixin register-block
    #register.row
        .col-md-12
            .text-center
                +icon('th-large').cs-block-title-icon
            .cs-title-line
            h2.cs-title!= erb('l.title.register')

    - var l = make_locale_shortcut('l.register_block.');
    .row        
        .col-md-6.col-md-offset-3
            p!= erb(l('hint_1', 'hint_2'))
    .row
        .col-md-6.col-md-offset-3
            hr
            .form-group
                +input(
                    'project',
                    'text',
                    erb(l('project_name_placeholder')),
                    erb(l('project_name_label'))
                )
            .form-group
                +input(
                    'mail',
                    'email',
                    erb(l('email_placeholder')),
                    erb(l('email_label'))
                )
            .form-group
                +textarea(
                    'description',
                    erb(l('description_placeholder')),
                    erb(l('description_label')),
                    6
                )
            .form-group
                // Spam honey pot
                +input('message').hidden
            hr
            .form-group
                +button('send', erb(l('register_project_button'))).btn-primary.pull-right

        - var id = 'register-modal';
        +window(id)
            +window-header(id, erb(l('success_modal_title')))
            +window-body(id)
                p!= erb(l('success_modal_text'))
            +window-footer(id)
                +window-button-ok