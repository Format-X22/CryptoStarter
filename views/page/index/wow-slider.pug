mixin wow-slider-slide
    li(data-transition='random' data-slotamount='7' data-masterspeed='300')
        img(
            src='img/wow-slider/bg.jpg'
            data-bgposition='center top'
            data-bgfit='cover'
            data-bgrepeat='no-repeat'
        )

        div.tp-caption.tp-fade.zindex-2(
            data-x='center'
            data-hoffset='0'
            data-y='center'
            data-voffset='0'
            data-speed='1000'
            data-start='500'
            data-easing='Linear.easeNone'
            data-splitin='none'
            data-splitout='none'
            data-elementdelay='0.1'
            data-endelementdelay='0.1'
            data-endspeed='300'
        )
            img(src='img/wow-slider/bg-blur.jpg')

        div.tp-caption.cs-wow-logo-name.customin.fadeout.tp-resizeme.zindex-3(
            data-x='center'
            data-hoffset='0'
            data-y='240'
            data-customin=
                'x:0;' +
                'y:0;' +
                'z:0;' +
                'rotationX:0;' +
                'rotationY:0;' +
                'rotationZ:0;' +
                'scaleX:1;' +
                'scaleY:1;' +
                'skewX:0;' +
                'skewY:0;' +
                'opacity:0;' +
                'transformPerspective:600;' +
                'transformOrigin:50% 50%;'
            data-speed='800'
            data-start='2000'
            data-easing='Linear.easeNone'
            data-splitin='none'
            data-splitout='none'
            data-elementdelay='0.1'
            data-endelementdelay='0.1'
            data-endspeed='300'
        )
            | Crypto
            span.cs-brand-main-color Starter

        div.tp-caption.cs-wow-main-text.customin.tp-resizeme.zindex-4(
            data-x='center'
            data-hoffset='4'
            data-y='339'
            data-customin=
                'x:0;' +
                'y:0;' +
                'z:0;' +
                'rotationX:0;' +
                'rotationY:0;' +
                'rotationZ:0;' +
                'scaleX:6;' +
                'scaleY:6;' +
                'skewX:0;' +
                'skewY:0;' +
                'opacity:0;' +
                'transformPerspective:600;' +
                'transformOrigin:50% 50%;'
            data-speed='1000'
            data-start='3000'
            data-easing='Power3.easeInOut'
            data-splitin='none'
            data-splitout='none'
            data-elementdelay='0.1'
            data-endelementdelay='0.1'
            data-endspeed='300'
        )
            | CROWDFUNDING

        div.tp-caption.sfl.fadeout.zindex-5(
            data-x='center'
            data-hoffset='-281'
            data-y='364'
            data-speed='300'
            data-start='2500'
            data-easing='Linear.easeNone'
            data-splitin='none'
            data-splitout='none'
            data-elementdelay='0.1'
            data-endelementdelay='0.1'
            data-endspeed='300'
        )
            img(src='img/wow-slider/left-dots.png')

        div.tp-caption.sfr.fadeout.zindex-6(
            data-x='center'
            data-hoffset='281'
            data-y='364'
            data-speed='300'
            data-start='2501'
            data-easing='Linear.easeNone'
            data-splitin='none'
            data-splitout='none'
            data-elementdelay='0.1'
            data-endelementdelay='0.1'
            data-endspeed='300'
        )
            img(src='img/wow-slider/right-dots.png')

        div.tp-caption.cs-wow-sub-text.tp-fade.tp-resizeme.zindex-7(
            data-x='center'
            data-hoffset='6'
            data-y='393'
            data-speed='300'
            data-start='3500'
            data-easing='Power3.easeInOut'
            data-splitin='chars'
            data-splitout='none'
            data-elementdelay='0.1'
            data-endelementdelay='0.1'
            data-endspeed='300'
        )
            | Decentralized.Borderless.Tokenizable.

mixin wow-slider
    div#rev_slider_wrapper.rev_slider_wrapper.fullwidthbanner-container
        div#rev_slider.rev_slider.fullwidthabanner
            ul
                +wow-slider-slide
                +wow-slider-slide