mixin present-block
    #home.row.cs-presentation
        .col-md-12
            .cs-title-line
            h2.cs-title!= erb('l.present.presentation_title')

            iframe(
                src='https://www.youtube.com/embed/giqLY2ojGqc?showinfo=0&modestbranding=1'
                frameborder='0'
                gesture='media'
                allow='encrypted-media'
                allowfullscreen
