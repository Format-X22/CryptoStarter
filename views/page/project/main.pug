                                    li Книга в 1 экземпляре
                                strong Доставка:
                                ul
                                    li по всему миру - 10.10.2018
                                hr
                                +button('buy-2', 'Купить').btn-primary.btn-block
                            .well.cs-project-item
                                span.label.label-primary.pull-right Куплено 2
                                h4 2 IDEA
                                hr
                                p Книга "Всемирный атлас кофе" с доставкой по всему миру.
                                strong Включает:
                                ul
                                    li Книга в 1 экземпляре
                                    li Подпись автора на книге
                                strong Доставка:
                                ul
                                    li по всему миру - 10.10.2018
                                hr
                                .cs-limit
                                    span.label.label-warning Осталось 8 из 10
                                +button('buy-3', 'Купить').btn-primary.btn-block
                            .well.cs-project-item
                                span.label.label-primary.pull-right Куплено 6
                                h4 8 IDEA
                                hr
                                p 10 книг "Всемирный атлас кофе" по специальной оптовой цене.
                                strong Включает:
                                ul
                                    li Книга в 10 экземплярах
                                strong Доставка:
                                ul
                                    li по всему миру - 10.10.2018
                                hr
                                +button('buy-4', 'Купить').btn-primary.btn-block
                                    

