include base

doctype html
html
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1')

        //- Google
        script(async src='https://www.googletagmanager.com/gtag/js?id=UA-73371848-1')
