        link(rel='apple-touch-icon' href='img/logo/167.png' sizes='167x167')
        
    body
        block body

        script(src='js/lib/fixes.js')
        script(src='js/lib/jquery.js')
        script(src='js/lib/bootstrap.js')

        - var id = 'error-modal'
        +window(id)
            +window-header(id, erb('l.error'))
            +window-body(id)
            +window-footer(id)
                +window-button-ok

        block scripts

        script(src='js/lib/fixes-after.js')